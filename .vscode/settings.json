{
  "nix.serverSettings": {
    "nixd": {
      "formatting": {
        "command": ["nixfmt"]
      },
      "options": {
        "nixos": {
          "expr": "(builtins.getFlake \"${workspaceFolder}\").nixosConfigurations.framework.options"
        },
        "home-manager": {
          "expr": "(builtins.getFlake \"${workspaceFolder}\").nixosConfigurations.framework.options.home-manager.users.type.getSubOptions []"
        }
        // "nix-darwin": {
        //   "expr": "(builtins.getFlake \"${workspaceFolder}/path/to/flake\").darwinConfigurations.<name>.options"
        // }
      }
    }
  }
}
